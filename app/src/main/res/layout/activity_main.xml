<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aliyun.thumbnail.MainActivity">



    <TextView
        android:id="@+id/label1"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="path:" />

    <TextView
        android:id="@+id/path"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_alignBaseline="@id/label1"
        android:layout_toRightOf="@id/label1" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_below="@id/label1"
        android:layout_marginTop="16dp"
        android:text="总时长:" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_alignBaseline="@id/label2"
        android:layout_toRightOf="@id/label2"
        android:layout_marginTop="16dp" />



    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label2"
        android:layout_marginTop="16dp"
        android:text="输入duration"
 />
    <EditText
        android:id="@+id/time"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_below="@id/label3"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        android:text="0" />
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_above="@+id/select"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"

        app:srcCompat="@android:color/background_dark" />

    <Button
        android:id="@+id/select"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="选择视频" />

    <Button
        android:id="@+id/thumbnailbtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:text="生成缩略图" />



</RelativeLayout>
